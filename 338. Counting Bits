class Solution {
    public int[] countBits(int num) {
        int dp[] = new int[num + 1];

        for (int i = 1; i <= num; i++) {
            // dp[i] = dp[i / 2] + i % 2;
            // the above can be written using bit manipulation
            dp[i] = dp[i >> 1] + (i & 1);
        }
        return dp;
    }
}
